<Window x:Class="lb4.Student_MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:lb4"
        mc:Ignorable="d"
        Title="Student_MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="500" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>
            
            <ListBox Name="listbox">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Change Student info" Click="OnEdit"/>
                        <MenuItem Header="Remove" Click="OnRemove"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
            
            <Button Grid.Row="1" Click="OnAddNew">
                Add New Student
            </Button>
        </Grid>
       
    </Grid>
</Window>
